<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MovieView">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <LinearLayout
        android:id="@+id/main_screen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal"
        android:layout_alignParentTop="true">
        <ImageView
            android:id="@+id/view_imag"
            android:layout_width="0dp"
            android:layout_height="260dp"
            android:layout_weight="1"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:id="@+id/mView_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:hint="Movie Name"/>
            <TextView
                android:id="@+id/mView_release"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:layout_marginTop="15dp"
                android:hint="Release Date"/>
            <TextView
                android:id="@+id/mView_genre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:layout_marginTop="15dp"
                android:hint="Genre"/>
            <TextView
                android:id="@+id/mView_country"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:layout_marginTop="15dp"
                android:hint="Country"/>
            <TextView
                android:id="@+id/mView_directory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:layout_marginTop="15dp"
                android:hint="Directory"/>
        </LinearLayout>

    </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="The Cast :"
            android:layout_marginTop="30dp"
            android:layout_marginHorizontal="5dp"
            android:textStyle="bold"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/mView_cast"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:hint="Cast"
            android:padding="10dp"
            android:textSize="15sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Plot :"
            android:layout_marginTop="30dp"
            android:layout_marginHorizontal="5dp"
            android:textStyle="bold"
            android:textSize="20sp"/>
        <TextView
        android:id="@+id/mView_plot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:padding="10dp"
        android:textSize="15sp"
        android:hint="Plot"/>

        <RatingBar
            android:id="@+id/mView_star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:isIndicator="true"
            android:max="100"
            android:numStars="5"
            android:stepSize="0.5" />

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="bottom">

     <Button
         android:id="@+id/mView_watchlist"
         android:layout_width="90dp"
         android:layout_height="60dp"
         android:text="Add Watchlist"
         android:layout_weight="1"
         android:layout_marginHorizontal="40dp"
         android:layout_marginTop="40dp"/>
        <Button
            android:id="@+id/mView_memoir"
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:text="Add      Memoir"
            android:layout_weight="1"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="40dp"/>
    </LinearLayout>

    </LinearLayout>
    </ScrollView>
</LinearLayout>