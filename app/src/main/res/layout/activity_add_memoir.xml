<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddMemoir"
    android:orientation="vertical"
    android:id="@+id/addMemoir">
    <LinearLayout
        android:id="@+id/main_screen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal"
        android:layout_alignParentTop="true">
        <ImageView
            android:id="@+id/addMemoir_imag"
            android:layout_width="0dp"
            android:layout_height="260dp"
            android:layout_weight="1"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:id="@+id/addMemoir_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:layout_marginTop="15dp"
                android:hint="Movie Name"/>
            <TextView
                android:id="@+id/addMemoir_release"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:layout_marginTop="25dp"
                android:hint="Release Date"/>

        </LinearLayout>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
    <Button
        android:id="@+id/addMemoir_pickDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:text="Watched Time" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="Cinema Name:"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="15dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/showCname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:textSize="13sp"
            android:textStyle="bold"
            android:hint="type Cinema name if not exists in list"/>
        <Button
            android:id="@+id/nameSubmit"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:text="submit"
            android:textSize="12sp"
            android:layout_marginRight="15dp"/>
        <Spinner
            android:id="@+id/addMemoir_CinemaName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="Cinema Postcode:"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="15dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="15dp">

        <EditText
            android:id="@+id/showClocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:textSize="13sp"
            android:textStyle="bold"
            android:hint="type Cinema location if not exists in list"/>
        <Button
            android:id="@+id/locationSubmit"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:text="submit"
            android:textSize="12sp"
            android:layout_marginRight="15dp"/>
        <Spinner
            android:id="@+id/addMemoir_CinemaPostcode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:text="Comments:"
                android:textSize="20sp"
                android:textStyle="italic|bold" />

            <EditText
                android:id="@+id/Edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="15dp"
                android:hint="You can type your comments in here
                              How you felt after watching the movie" />

            <RatingBar
                android:id="@+id/addMemoir_star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:max="10"
                android:numStars="5"
                android:stepSize="0.5" />

            <Button
                android:id="@+id/addMemoir_submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="Submit" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>